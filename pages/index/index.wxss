/**index.wxss**/
page{
  background: #F8FAFC;
}
.header{
  width: 100%;
  height: 267rpx;
  position: relative;
}
.header image{
  width: 100%;
  height: 100%;
}
.title-bar{
  position: absolute;
  top: 40rpx;
  display: flex;
  align-items: center;
  color: white;
  padding: 0 33rpx 0 52rpx;
  width: 100%;
  box-sizing: border-box;
  justify-content: space-between;
}
.title-bar image{
  width: 42rpx;
  height: 42rpx;
}

.name-card{
  position: absolute;
  top: 109rpx;
  left: 30rpx;
  right: 30rpx;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 7rpx 24rpx 0rpx rgba(239, 243, 247, 0.4);
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.name-card > image{
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
  border-radius: 50%;
  overflow: hidden;
}
.name-text{
  display: flex;
  flex-direction: column;
}
.name-icon{
  display: flex;
  height: 48rpx;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #060C2B;
  margin-bottom: 18rpx;
}
.combination-icon{
  position: relative;
}
.combination-icon image{
  height: 48rpx;
  width: 48rpx;
  position: absolute;
  left: 0rpx;
  top: 50%;
  transform: translateY(-50%);
}
.spe-back{
  /* max-width: 166rpx; */
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  background: linear-gradient(0deg, #FFED8F, #FFE03E);
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: #060C2B;
  margin-left: 20rpx;
  padding: 0 26rpx 0 40rpx;
  box-sizing: border-box;
  font-weight: normal;
}
.name-text >text{
  font-size: 28rpx;
  font-weight: 400;
  color: #5A5D69;
  line-height: 26rpx;
  margin-top: 22rpx;
  font-weight: normal;
}
/* tab */
.tab{
  margin-top: 114rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #5A5D69;
  line-height: 30rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
}
.tab-item{
  display: flex;
  flex-direction: column;
  width: 20%;
  align-items: center;
  position: relative;
}
.tab-item .bottom-bar{
  width: 64rpx;
  height: 6rpx;
  background: #278CFF;
  border-radius: 3rpx;
  margin-top: 20rpx;
  display: none;
}
.active .bottom-bar{
  display: block;
}
.active{
  font-weight: 500;
  color: #131936; 
}
.num-icon{
  padding: 0rpx 10rpx;
  background: #FE461F;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0rpx 4rpx 3rpx 0rpx rgba(254, 70, 31, 0.28);
  border-radius: 24rpx;
  position: absolute;
  right: 10rpx;
  top: -30rpx;
  font-size: 20rpx;
  font-weight: bold;
  color: #FFFFFF;
}

/* 商品信息 */
.info-card{
  margin: 0 30rpx;
  box-sizing: border-box;
}
.info-card-item{
  background: #FFFFFF;
  border-radius: 14rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.info-card-item-title{
  display: flex;
  height: 82rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  font-weight: 400;
  color: #5A5D69;
  border-bottom: 1px solid #EEF0F5;
}
.info-card-item-title text:last-of-type{
  padding: 8rpx 28rpx;
  border-radius: 20px;
}
.pink-style{
  background: rgba(254, 70, 31, 0.1);
  color: #FE461F;
}
.info-card-item-content-box{
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid #EEF0F5;
}
.pro-title{
  font-size: 28rpx;
  font-weight: 500;
  color: #131936;
  line-height: 30rpx;
  margin-bottom: 32rpx;
}
.pro-price{
  display: flex;
  justify-content: space-between;
  font-weight: 400;
  color: #5A5D69;
  line-height: 30rpx;
  align-items: center;
}
.big-font{
  font-size: 28rpx;
  font-weight: 400;
  color: #131936;
}
.pro-weight{
  margin-left: 48rpx;
}
.sum-price{
  font-weight: 500;
  color: #131936;
  line-height: 30rpx;
}

.info-card-item-content-sumary{
  display: flex;
  padding: 36rpx 0;
  box-sizing: border-box;
  font-size: 26rpx;
  font-weight: 400;
  color: #5A5D69;
  line-height: 30rpx;
  justify-content: space-between;
  border-bottom: 1px solid #EEF0F5;
}
.mar-left{
  margin-left: 40rpx;
}
.info-card-item-content-sumary > text:last-of-type{
  color: #FE461F;
  line-height: 30rpx;
}
.spe-color{
  font-weight: 500;
  font-size: 30rpx;
}
.last-item{
  padding-top:40rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #5A5D69;
  line-height: 30rpx;
  display: flex;
  flex-direction: column;
}
.last-item text{
  margin-bottom: 40rpx;
}

.btns{
  width: 100%;
  display: flex;
  justify-content: flex-end;
}
.btns text{
  width: 180rpx;
  height: 64rpx;
  border: 1rpx solid #278CFF;
  border-radius: 32rpx;
  text-align: center;
  line-height: 64rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #278CFF;
}
.btns .action-style{
background: linear-gradient(270deg, #278CFF, #0EBCFC);
border: none;
color: #FFFFFF;
}
.no-data-box{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
}
.no-data{
  width: 196rpx;
  height: 196rpx;
  margin: 0 auto;
}
.no-data-box text{
  font-size: 28rpx;
  font-weight: 500;
  color: #5A5D69;
  line-height: 84rpx;
}

/* 表单弹窗 */
.login-input textarea{
  width: 470rpx;
  background: #F8FAFC;
  border-radius: 8rpx;
  margin: 0 auto;
  padding: 20rpx;
  font-size: 26rpx;
  height: 140rpx;
}
.teatarea-placeholder{
  font-size: 26rpx;
  font-weight: 400;
  color: #999FB1;
  line-height: 30rpx;
}

.login-input picker{
  width: 470rpx;
  height: 64rpx;
  background: #F8FAFC;
  border-radius: 8rpx;
  margin: 0 auto;
  padding: 0 20rpx;
  font-size: 26rpx;
}
.second-input{
  margin: 20rpx 0 30rpx;
}
.login-input picker view{
  line-height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}
.login-input picker image{
  width: 16rpx;
  height: 12rpx;
}
.images-style{
  display: flex;
  flex-wrap: wrap;
  margin: 0 0 44rpx 20rpx;
}
.images-style view{
  width: 116rpx;
  height: 116rpx;
  background-color: red;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.images-style view image{
  width: 100%;
  height: 100%;
}
.images-style view .cha-cion{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: -15rpx;
  right: -15rpx;
}

/* 配送要求弹窗 */
.radio-group{
  padding:20rpx
}
.radio-group .tui-menu-list{
  font-size: 30rpx;
  color: #131936;
  line-height: 30rpx;
  margin-bottom: 30rpx;
}
.no-margin-padding-top{
  margin-top: 0;
  padding-top: 0;
}
