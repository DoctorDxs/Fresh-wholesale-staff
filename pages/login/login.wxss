
.page {
  padding: 0 65rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #060C2B;
  margin: 70rpx 0 54rpx;
}

.logo {
  width: 150rpx;
  height: 150rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.logo image {
  width: 100%;
  height: 100%;
}

.email {
  font-size: 28rpx;
  color: #999FB1;
  position: fixed;
  bottom: 80rpx;
}

.login {
  margin-top: 140rpx;
}

.login-input  {
  background: #F4F5F9;
  border-radius: 40rpx;
  padding: 0 30rpx;
  width: 620rpx;
}

.login-placeholder {
  color: #999FB1;
}

.login-input input {
  height: 80rpx;
  font-size: 28rpx;
  caret-color:#0186FE;
}

.password-input {
  margin-top: 54rpx;
}

.forget-password {
  color: #5A5D69;
  margin-top: 10rpx;
  padding: 10rpx 0;
  text-align: right;
  font-size: 28rpx;
}

.login-btns {
  margin-top: 108rpx;
}

.login-btns button{
  text-align: center;
  border-radius: 40rpx;
  width: 100%!important;
  font-size: 28rpx!important;
}

.login-btn {
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(270deg, #278CFF, #0EBCFC);
  color: #ffffff;
}

.login-register {
  background: #E6F2FF;
  margin-top: 30rpx;
  color: #0186FE;
}


