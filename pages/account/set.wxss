page {
  background: #F6F7FA;
}

.page {
  padding: 20rpx 30rpx 0;
}


.name-card{
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 7rpx 24rpx 0rpx rgba(239, 243, 247, 0.4);
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.name-card > image{
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
}
.name-text{
  display: flex;
  flex-direction: column;
}
.name-icon{
  display: flex;
  height: 48rpx;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #060C2B;
  margin-bottom: 18rpx;
}
.combination-icon{
  position: relative;
}
.combination-icon image{
  height: 48rpx;
  width: 48rpx;
  position: absolute;
  left: 0rpx;
  top: 50%;
  transform: translateY(-50%);
}
.spe-back{
  /* max-width: 166rpx; */
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  background: linear-gradient(0deg, #FFED8F, #FFE03E);
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: #060C2B;
  margin-left: 20rpx;
  padding: 0 26rpx 0 40rpx;
  box-sizing: border-box;
  font-weight: normal;
}
.name-text >text{
  font-size: 28rpx;
  font-weight: 400;
  color: #5A5D69;
  line-height: 26rpx;
  margin-top: 22rpx;
  font-weight: normal;
}

.account-item-wrap {
  padding: 0rpx 30rpx 0;
  border-radius: 16rpx;
  background: #ffffff;
}

.account-item {
  display: flex;
  align-items: center;
  height: 110rpx;
  line-height: 110rpx;
  justify-content: space-between;
  border-bottom: 1px solid #F1F2F7;
}

.avatar {
  height: 150rpx;
}

.avatar image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.item-title {
  color: #060C2B;
  font-size: 30rpx;
}

.item-value {
  color: #5A5D69;
  font-size: 30rpx;
}

.icon-more {
  width: 12rpx;
  height: 20rpx;
}

.set-account {
  margin-top: 20rpx;
}
.login-btns {
  position: fixed;
  bottom: 60rpx;
}

.login-btns button{
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx!important;
}
.login-btn {
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  background: linear-gradient(270deg, #278CFF, #0EBCFC);
  color: #ffffff;
  width: 690rpx!important;
}