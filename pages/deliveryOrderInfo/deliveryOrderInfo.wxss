/* pages/deliveryOrderInfo/deliveryOrderInfo.wxss */
page{
  background: #F4F5F9;
}
.delivery-info-header{
  height: 168rpx;
  width: 100%;
  background: linear-gradient(270deg, #278CFF, #0EBCFC);
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #FFFFFF;
  padding: 0 30rpx;
}
.delivery-info-header-left{
  width: 60%;
}
.delivery-info-header-right{
  width: 40%;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.delivery-info-header-left > view,.delivery-info-header-right > view{
  line-height: 30px;
}

.purchase-title{
  font-size: 24rpx;
  font-weight: 400;
  color: #5A5D69;
  line-height: 30rpx;
  display: flex;
  justify-content: space-between;
  padding: 30rpx 30rpx 20rpx;
}
.purchase-title > text{
  font-size: 28rpx;
  font-weight: bold;
  color: #131936;
}
/* 配送要求 */
.deliver-requirements{
  background-color: white;
  padding: 30rpx 30rpx 10rpx;
  font-size: 24rpx;
}
.deliver-requirements-title{
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.deliver-requirements-content{
  font-weight: 400;
  color: #5A5D69;
}
.deliver-requirements-content view{
  margin-bottom: 20rpx;
}
/* 异常处理 */
.abnormal-handle{
  margin: 20rpx 30rpx 0;
  background-color: #fff;
  border-radius: 16px;
}
.abnormal-handle-title{
  padding: 30rpx 0 30rpx 30rpx;
}
.abnormal-handle-small-box{
  display: flex;
  padding: 0 30rpx 30rpx 66rpx;
  position: relative;
}
.abnormal-handle-small-box view{
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  justify-content: center;
  line-height: 30rpx;
  color: #131936;
}
.abnormal-handle-small-box .first{
  width: 30%;
}
.abnormal-handle-small-box .second{
  width: 20%;
}
.abnormal-handle-small-box .third{
  text-align: right;
  width: 50%;
  color: #5A5D69;
}
.abnormal-handle-small-box .third text,.abnormal-handle-small-box .first text{
  margin-bottom: 10rpx;
}
.abnormal-handle-small-box::before{
  content: "";
  position: absolute;
  z-index: 1;
  top: 40rpx;
  left: 30rpx;
  width: 18rpx;
  height: 18rpx;
  border-radius: 100%;
  background: #278CFF;
  box-sizing: border-box;          
}
.abnormal-handle-small-box view::before{
  position: absolute;
  z-index: 1;
  top: 58rpx;
  left: 38rpx;
  content: "";
  width: 1px;
  height: 100%;
  border-right: 1px solid #C7E9FF;
  box-sizing: border-box;
}
.abnormal-handle-small-box:last-child view::before{
  height: 0;
}
/* 分检单 */
.info-card{
  margin: 0 30rpx;
  box-sizing: border-box;
}
.info-card-item{
  background: #FFFFFF;
  border-radius: 14rpx;
  /* padding: 0 30rpx; */
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.info-card-item-title{
  display: flex;
  height: 82rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  font-weight: 400;
  padding: 0 30rpx;
  color: #5A5D69;
  border-bottom: 1px solid #EEF0F5;
}
.pink-style{
  padding: 8rpx 28rpx;
  border-radius: 20px;
  background: rgba(254, 70, 31, 0.1);
  color: #FE461F;
  margin-left: 20rpx;
}
.info-card-item-content-box{
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  padding: 30rpx;
  border-bottom: 1px solid #EEF0F5;
}

.pro-title{
  font-size: 28rpx;
  font-weight: 500;
  color: #131936;
  line-height: 30rpx;
  margin-bottom: 32rpx;
}
.pro-price{
  display: flex;
  justify-content: space-between;
  font-weight: 400;
  color: #5A5D69;
  line-height: 30rpx;
  align-items: center;
}
.big-font{
  font-size: 28rpx;
  font-weight: 400;
  color: #131936;
}
.pro-weight{
  margin-left: 48rpx;
}
.sum-price{
  font-weight: 500;
  color: #131936;
  line-height: 30rpx;
}

.mar-left{
  margin-left: 40rpx;
}

.spe-color{
  font-weight: 500;
  font-size: 30rpx;
}
.last-item{
  font-size: 24rpx;
  font-weight: 400;
  color: #5A5D69;
  display: flex;
  flex-direction: column;
}
.last-item-explain{
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #FE461F;
  background: rgba(254, 70, 31, 0.1);
  /* border-radius: 8px; */
}
.last-item-explain text{
  margin-bottom: 20rpx;
}

.last-item-explain text:last-of-type{
  margin-bottom: 0rpx;
}
.text-btns{
  width: 100%;
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 0 30rpx;
  border-top: 1px solid #EEF0F5;
}
.text-btns > text{
  width: 180rpx;
  height: 64rpx;
  background: linear-gradient(270deg, #0EBCFC, #278CFF);
  border-radius: 32rpx;
  text-align: center;
  line-height: 64rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #FFFFFF;
  margin-right: 30rpx;
}
.driver{
  font-size: 24rpx;
  color: #131936;
  line-height: 30rpx;
  margin-right: 30rpx;
}
.driver text:first-of-type{
  margin-right: 60rpx;
}

/* 个人信息 */
.info-person{
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
}
.info-person-top{
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  align-items: center;
  margin-top: 34rpx;
}
.info-person-top-left{
  display: flex;
  align-items: center;
}
.info-person-top-left > image{
  width: 34rpx;
  height: 34rpx;
  margin-right: 30rpx;
}
.info-person-bottom{
  font-size: 26rpx;
  font-weight: 400;
  color: #5A5D69;
  line-height: 30rpx;
  margin-left: 58rpx;
  margin-bottom: 40rpx;
  margin-top: 20rpx;
}
/* 采购商品明细 */
.purchase-order-info{
  margin: 20rpx 30rpx 0;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 0 30rpx;
}
.purchase-order-info-title{
  font-size: 28rpx;
  font-weight: bold;
  color: #131936;
  line-height: 30rpx;
  padding: 30rpx 0;
  padding-left: 20rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #EEF0F5;
}
.purchase-order-info-title::before{
  position: absolute;
  left: 0;
  top: 32rpx;
  content: '';
  width: 4rpx;
  height: 25rpx;
  background: #278CFF;
  border-radius: 2rpx;
}
.purchase-order-info-title text:last-of-type{
  font-size: 24rpx;
  font-weight: 400;
  color: #278CFF;
}

.purchase-order-info .info-card-item-content-box{
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid #EEF0F5;
}
.purchase-order-info .info-card-item-content-box:last-of-type{
  border: none;
}

.purchase-order-info-item{
  font-size: 26rpx;
  font-weight: 400;
  color: #5A5D69;
  line-height: 30rpx;
  padding-bottom: 30rpx;
  display: flex;
  align-items: center;
}
.purchase-order-info-item text:first-of-type{
  margin-right: 50rpx;
  min-width: 130rpx;
}
.purchase-order-info:last-of-type{
  margin-bottom: 20rpx;
}
.no-border{
  border: none;
}

.btn{
  height: 112rpx;
  background: #FFFFFF;
  margin-top: 54rpx;
  display: flex;
  align-items: center;
}
.btn text{
  margin: 0 auto;
  display: inline-block;
  width: 690rpx;
  height: 80rpx;
  background: linear-gradient(270deg, #278CFF, #0EBCFC);
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #FFFFFF;
  text-align: center;
  line-height: 80rpx;
}
/* 表单弹窗 */
.login-input textarea{
  width: 470rpx;
  background: #F8FAFC;
  border-radius: 8rpx;
  margin: 0 auto;
  padding: 20rpx;
  font-size: 26rpx;
  height: 140rpx;
}
.teatarea-placeholder{
  font-size: 26rpx;
  font-weight: 400;
  color: #999FB1;
  line-height: 30rpx;
}

.login-input picker{
  width: 470rpx;
  height: 64rpx;
  background: #F8FAFC;
  border-radius: 8rpx;
  margin: 0 auto;
  padding: 0 20rpx;
  font-size: 26rpx;
}
.second-input{
  margin: 20rpx 0 30rpx;
}
.login-input picker view{
  line-height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}
.login-input picker image{
  width: 16rpx;
  height: 12rpx;
}
.images-style{
  display: flex;
  flex-wrap: wrap;
  margin: 0 0 44rpx 20rpx;
}
.images-style view{
  width: 116rpx;
  height: 116rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.images-style view image{
  width: 100%;
  height: 100%;
}
.images-style view .cha-cion{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: -15rpx;
  right: -15rpx;
}

/* 配送要求弹窗 */
.require-big-box{
  font-size: 24rpx;
  padding: 0 36rpx;
  color: #5A5D69;
}
.small-box{
  margin-bottom: 40rpx;
}
.small-box-title{
  font-size: 28rpx;
  color: #141C24;
  margin-bottom: 10rpx;
}
.small-box-subtitle{
  margin-bottom: 10rpx;
}
.small-box-content view{
  margin-bottom: 10rpx;
}
.disable-style text{
  background: #ccc;
}